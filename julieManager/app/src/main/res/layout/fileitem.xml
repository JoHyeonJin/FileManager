<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:background="@drawable/listview_selector">

    <!--file icon-->
    <ImageView
        android:id="@+id/iv_fileImage"
        android:layout_width="42.67dp"
        android:layout_height="42.67dp"
        android:layout_marginStart="6.00dp"
        android:layout_marginTop="5.67dp"
        android:layout_marginEnd="7.67dp"
        android:layout_marginBottom="5.67dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="42.67dp"
        android:layout_marginTop="5.67dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--file name-->
        <TextView
            android:id="@+id/tv_fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@drawable/filename_selector"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/li_fileDateAndSize"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:orientation="horizontal">

            <!--file Date-->
            <TextView
                android:id="@+id/tv_fileDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@drawable/filedate_selector"
                android:textSize="12sp" />

            <!--file Size-->
            <TextView
                android:id="@+id/tv_fileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.67dp"
                android:gravity="center_vertical"
                android:textColor="@drawable/filedate_selector"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!--file Favorite-->
    <CheckBox
        android:id="@+id/ch_fileFavorite"
        android:layout_width="48dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:button="@drawable/favorite_selector" />
</LinearLayout>